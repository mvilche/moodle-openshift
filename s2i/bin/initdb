#!/bin/bash -e
#
# S2I run script for the 'springboot-sti' image.
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

if [ -f "/opt/moodle_config/config.php" ]; then

cat /opt/moodle_config/config.php > /var/www/html/config.php 

php /var/www/html/admin/cli/install_database.php --agree-license --non-interactive --fullname=openshift --shortname=openshift --adminuser=admin --adminpass=admin --adminemail=admin@admin.com

exit 0

else

echo "---->  NO SE ENCONTRO config.php SALIENDO.."
exit 1

fi

